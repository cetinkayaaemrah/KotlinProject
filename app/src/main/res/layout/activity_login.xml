<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.LoginActivity">


        <TextView
                android:text="User Register"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvRegister" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="116dp"
                app:layout_constraintTop_toBottomOf="@+id/login_button" app:layout_constraintHorizontal_bias="0.498"
                android:lineSpacingExtra="18sp" android:textSize="18sp" android:gravity="center"/>
        <EditText
                android:hint="User name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/etEmail" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.495"
                android:layout_marginTop="188dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <EditText
                android:hint="User password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:singleLine="true"
                android:ems="10"
                android:id="@+id/etPassword" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.495"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/etEmail"/>
        <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="316dp"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                app:layout_constraintHorizontal_bias="0.494" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/btnLogin"/>
        <Button
                android:text="LOGIN"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnLogin"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                app:layout_constraintHorizontal_bias="0.498"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/etPassword"/>


</android.support.constraint.ConstraintLayout>