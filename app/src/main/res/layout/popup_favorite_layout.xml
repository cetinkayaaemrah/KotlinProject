<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="150dp" android:id="@+id/linearLayout2">

    <Spinner
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/spinerCategories"
            android:layout_marginTop="20dp" android:layout_marginBottom="32dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnAddFavorite" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="ADD FAVORITE"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddFavorite"
            app:layout_constraintTop_toBottomOf="@+id/spinerCategories" android:layout_marginBottom="7dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>